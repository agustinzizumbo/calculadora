# Build stage para Angular
FROM node:20-alpine AS build

WORKDIR /app

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm ci

# Copiar c칩digo fuente
COPY . .

# Build de producci칩n
RUN npm run build

# Runtime stage - Nginx para servir archivos est치ticos
FROM nginx:alpine

# Copiar los archivos compilados de Angular al directorio de Nginx
COPY --from=build /app/dist/calculadora-kw-frontend/browser /usr/share/nginx/html

# Copiar configuraci칩n de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
